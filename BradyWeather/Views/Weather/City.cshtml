
@model IEnumerable<City>

@{
    ViewData["Title"] = "City";
}


<div class="container">

    <div class="container">

        <div class="form-group col-md-offset-3 col-md-5">

            <h2>Forecast for the selected city</h2>

            <table cellpadding="10" cellspacing="10">
                <tr>
                    <th>Country</th>
                    <th>Name</th>
                    <th>Temperature</th>
                    <th>Humidity</th>
                    <th>Pressure</th>
                    <th>Wind</th>
                    <th>Weather</th>
                </tr>

                @foreach (City city in Model)
                {
                    <tr>
                        <td>@city.Country</td>
                        <td>@city.Name</td>
                        <td>@city.Temp °C</td>
                        <td>@city.Humidity %</td>
                        <td>@city.Pressure Hpa</td>
                        <td>@city.Wind Km/h</td>
                        <td>@city.Weather</td>
                    </tr>
                }

            </table>


        </div>

    </div>

    <div class="container">

        <div class="form-group col-md-offset-3 col-md-5">

            <form method="get">
                <button asp-controller="Weather" asp-action="SearchCity" class="btn btn-success">Return</button>
            </form>

        </div>

    </div>

</div>
